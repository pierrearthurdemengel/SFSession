{% extends 'base.html.twig' %}

{% block title %}Liste des Sessions !
{% endblock %}

{% block body %}

	<h1>
		Liste des sessions
	</h1>

	<a class="btn btn-primary" href="{{ path( 'add_session') }}">Ajouter une session</a><br>


	{% for session in sessions %}

		<a href="{{ path( 'show_session', {'id': session.id}) }}">{{ session }}</a><br>
		<a class="btn-warning" href="{{ path( 'edit_session', {'id': session.id}) }}">
			Edit
		</a><br>
		<a class="btn-danger" href="{{ path( 'delete_session', {'id': session.id}) }}">
			Delete
		</a><br>


	{% endfor %}


{% endblock %}
